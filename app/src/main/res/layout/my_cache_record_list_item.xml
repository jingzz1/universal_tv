<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="124dp"
    android:layout_height="93dp">


    <ImageView
        android:id="@+id/my_cache_record_item_image"
        android:layout_width="115.5dp"
        android:layout_height="68dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/head_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view1"
        android:layout_width="28.5dp"
        android:layout_height="68dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/my_cache_record_item_image"
        app:layout_constraintEnd_toEndOf="@+id/my_cache_record_item_image"
        app:layout_constraintTop_toTopOf="@+id/my_cache_record_item_image" />

    <TextView
        android:id="@+id/my_cache_record_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="标题标题标题标题标题标题标题"
        android:textColor="@color/black"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/my_cache_record_item_image"
        app:layout_constraintTop_toBottomOf="@+id/my_cache_record_item_image" />


    <TextView
        android:id="@+id/my_cache_record_item_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="10.5dp"
        app:layout_constraintBottom_toTopOf="@+id/icon"
        app:layout_constraintEnd_toEndOf="@+id/view1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/view1"
        app:layout_constraintTop_toTopOf="@+id/view1" />


    <ImageView
        android:id="@+id/icon"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/my_cache_record_item_amount_icon"
        app:layout_constraintBottom_toBottomOf="@+id/view1"
        app:layout_constraintEnd_toEndOf="@+id/view1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/view1"
        app:layout_constraintTop_toBottomOf="@+id/my_cache_record_item_amount" />

</android.support.constraint.ConstraintLayout>