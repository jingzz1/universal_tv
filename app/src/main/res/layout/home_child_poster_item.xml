<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="168dp"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/home_child_poster_item_image"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/home_child_poster_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="标题标题标题标题"
        android:textSize="12dp"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/grad_66"/>

    <TextView
        android:id="@+id/home_child_poster_item_depict"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:textSize="11dp"
        android:layout_marginTop="3dp"
        android:text="描述描述描述描述描述"
        android:textColor="@color/grad_99"/>


</LinearLayout>