<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ShareFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/share_fragment_bg" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="最新片源 无广告 永久免费"
        android:textColor="@color/white"
        android:textSize="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="40dp"
        android:text="保存这张图片到本地，如遇到APP无法打开时请扫描二维码或者输入官网地址重新下载APP即可，邀请好友注册，双方都可获取奖励哦！"
        android:textColor="@color/white"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/share_shareToLocal"
        android:layout_width="143dp"
        android:layout_height="38dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/share_button_blue"
        android:gravity="center"
        android:text="保存二维码"
        android:textColor="@color/white"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/text2"
        app:layout_constraintEnd_toStartOf="@+id/share_inviteRegister"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/share_inviteRegister"
        android:layout_width="143dp"
        android:layout_height="38dp"
        android:layout_marginStart="14dp"
        android:background="@drawable/share_button_red"
        android:gravity="center"
        android:text="邀请好友注册"
        android:textColor="@color/white"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/share_shareToLocal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/share_shareToLocal"
        app:layout_constraintTop_toTopOf="@+id/share_shareToLocal" />


    <TextView
        android:id="@+id/share_textView_invitationCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vtG8g"
        android:textColor="@color/red3"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/share_imageView_qrCode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintVertical_chainStyle="packed" />


    <ImageView
        android:id="@+id/share_imageView_qrCode"
        android:layout_width="205dp"
        android:layout_height="205dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/share_textView_invitationCode" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="扫描上面二维码，下载麻花视频\n官网:http://baidu.com"
        android:textColor="@color/white"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/share_shareToLocal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/share_imageView_qrCode" />


    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:text="邀请码"
        android:textColor="@color/white"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/share_textView_invitationCode"
        app:layout_constraintEnd_toStartOf="@+id/share_textView_invitationCode"
        app:layout_constraintTop_toTopOf="@+id/share_textView_invitationCode" />


    <TextView
        android:id="@+id/share_textView_copy"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/share_copy_bg"
        android:gravity="center"
        android:text="复制"
        android:textColor="@color/white"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/share_textView_invitationCode"
        app:layout_constraintStart_toEndOf="@+id/share_textView_invitationCode"
        app:layout_constraintTop_toTopOf="@+id/share_textView_invitationCode" />

</android.support.constraint.ConstraintLayout>