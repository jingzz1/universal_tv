<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PageViewIndicaor">
        <!-- indicator width, unit dp,default 6dp -->
        <attr name="fpi_width" format="dimension"/>
        <!-- indicator height,unit dp,default 6dp -->
        <attr name="fpi_height" format="dimension"/>
        <!-- indicator space between two indicators,unit dp,default 6dp -->
        <attr name="fpi_gap" format="dimension"/>
        <!-- width of the stroke used to draw the indicators,default 0dp -->
        <attr name="fpi_strokeWidth" format="dimension"/>
        <!-- color of the stroke used to draw the indicators,default "#ffffff" -->
        <attr name="fpi_strokeColor" format="color"/>
        <!-- Whether or not the selected indicator snaps to the indicators,default false -->
        <attr name="fpi_isSnap" format="boolean"/>
        <!-- indicator select color ,default "#ffffff" -->
        <attr name="fpi_selectColor" format="color"/>
        <!-- indicator unselect color ,default "#88ffffff"  -->
        <attr name="fpi_unselectColor" format="color"/>
        <!-- indicator corner raduis ,unit dp,default 3dp -->
        <attr name="fpi_cornerRadius" format="dimension"/>
        <!-- indicator select drawable resource -->
        <attr name="fpi_selectRes" format="reference"/>
        <!-- indicator unselect drawable resource -->
        <attr name="fpi_unselectRes" format="reference"/>
    </declare-styleable>
    
    
    <declare-styleable name="TakeCheckTextView">
        <attr name="tct_checkedText" format="string"/>
        <attr name="tct_urCheckedText" format="string"/>
    </declare-styleable>

    <declare-styleable name="RadiusImageView">
        <attr name="riv_radius" format="dimension" />
        <attr name="riv_left_top_corner_radius" format="dimension" />
        <attr name="riv_right_top_corner_radius" format="dimension" />
        <attr name="riv_left_bottom_corner_radius" format="dimension" />
        <attr name="riv_right_bottom_corner_radius" format="dimension" />
        <attr name="riv_border_width" format="dimension" />
        <attr name="riv_border_color" format="color" />
        <attr name="riv_oval" format="boolean" />
        <attr name="android:scaleType" />
    </declare-styleable>


</resources>